<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VpnMainActivity">
    <LinearLayout
      android:id="@+id/ll_main_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:padding="25dp"
      android:orientation="vertical">
      <TextView
        android:id="@+id/main_tv_login"
        android:text="@string/text_login_activity_main_vpn"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="40dp" />
      <RelativeLayout
        android:id="@+id/main_layout_connect"
        android:clickable="true"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
          android:id="@+id/main_iv_connect"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_centerInParent="true"
          android:src="@drawable/circle_0"
          android:scaleType="centerCrop" />

        <TextView
          android:id="@+id/main_tv_connect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_centerInParent="true"
          android:background="#AA000000"
          android:text="Connect"
          android:textColor="#ffffffff" />
      </RelativeLayout>
      <ImageView
        android:id="@+id/main_iv_country"
        android:layout_centerInParent="true"
        android:src="@drawable/country_jp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
      <LinearLayout
        android:id="@+id/main_ll_expire_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="25dp"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/main_tv_expirelabel"
          android:text="expire date: "
          android:textAllCaps="false"
          android:layout_width="100dp"
          android:layout_height="40dp" />
        <TextView
          android:id="@+id/main_tv_expire"
          android:text=""
          android:textAllCaps="false"
          android:layout_width="200dp"
          android:layout_height="40dp" />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/ll_task_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="25dp"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/main_iv_buy"
          android:src="@drawable/buy_1"
          android:clickable="true"
          android:layout_width="200dp"
          android:layout_height="20dp"/>
        <ImageView
          android:id="@+id/main_iv_help"
          android:src="@drawable/help_1"
          android:clickable="true"
          android:layout_width="20dp"
          android:layout_height="20dp"/>
      </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
